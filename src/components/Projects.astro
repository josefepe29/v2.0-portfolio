---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};
const PROJECTS = [
  {
    title: "ToDo List - Better for your Tasks",
    description:
      "Created from scratch with React.js. It's a simple web application that allows you to keep track of your daily tasks and activities. Optimized for SEO and performance.",
    link: "https://todo-list-nu-navy.vercel.app/",
    github: "https://github.com/josefepe29/my-react-task-list/tree/review-1",
    image: "/projects/ToDo-app-Front.png",
  },
];
---

{
  PROJECTS.map(({ image, title, description }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
